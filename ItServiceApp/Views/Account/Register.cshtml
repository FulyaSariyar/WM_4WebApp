@model RegisterViewModel 
@{
    ViewBag.Title = "Kayıt Ol";
}

    <partial name="Partials/_PageStartPartial" />
    <!--====== Shoping Checkout Start  ======-->
    <section class="shoping-checkout-area section-gap">
        <div class="container">
            <div class="user-actions mb-40">
                 <p>Üyeliğiniz var mı? <a asp-controller="Account" asp-action="Login"> Giriş için Tıklayın</a></p>
            </div>
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <form methot="post" asp-controller="Account" asp-action="Register">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="billing-details">
                            <h3 class="title">Kayıt Formu</h3>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="UserName"></label>
                                        <input asp-for="UserName" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                       <label asp-for="EmailAddress"></label>
                                        <input asp-for="EmailAddress" />
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                       <label asp-for="SurName"></label>
                                        <input asp-for="SurName" />
                                        <span asp-validation-for="SurName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                         <label asp-for="ConfirmPassword"></label>
                                        <input asp-for="ConfirmPassword" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                <div class="payment-box mt-30">
                                    <input type="submit" class="main-btn" value="Kayıt Ol" />
                                </div>
                           
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!--====== Shoping Checkout End ======-->
    @section Styles
    {
        <style>
            input{
                border:solid 1px #e3eeff;
                height:50px;
                padding:0 15px;
            }
        </style>
    }
